# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o  # or gpt-4o-mini for cost savings

# Image API Keys
PEXELS_API_KEY=your-pexels-api-key
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# Google Sheets Configuration
GOOGLE_SHEETS_CREDENTIALS_FILE=config/google-credentials.json
GOOGLE_SHEET_ID=your-google-sheet-id

# WordPress Sites (JSON array format)
# Each site needs: url, username, application_password
WORDPRESS_SITES='[
  {
    "name": "Site 1",
    "url": "https://example1.com",
    "username": "admin",
    "app_password": "xxxx xxxx xxxx xxxx xxxx xxxx"
  },
  {
    "name": "Site 2",
    "url": "https://example2.com",
    "username": "admin",
    "app_password": "xxxx xxxx xxxx xxxx xxxx xxxx"
  }
]'

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Scheduling Configuration
POSTS_PER_WEEK_PER_SITE=3
POSTING_HOURS=9,12,15  # Hours of day to post (24-hour format)

# Content Configuration
MIN_WORD_COUNT=800
MAX_WORD_COUNT=1000
ENABLE_INTERNAL_LINKING=true
MIN_INTERNAL_LINKS=1
MAX_INTERNAL_LINKS=5

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_SHEET=true
